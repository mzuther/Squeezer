{%- import 'settings/common.jinja' as common -%}
{%- import 'settings/frut.jinja' as frut -%}
{%- import 'settings/settings.jinja' as settings -%}

{# ========================================================================== #}

{%- macro render_preamble(copyright, vst2_category) %}
@echo off

{% for line in copyright -%}
rem  {{ line }}
{% endfor %}


rem  ############################################################################
rem
rem  WARNING: this file was auto-generated, please do not edit!
rem
rem  ############################################################################

setlocal

set rsync_path="E:\Documents\System\Tools\rsync\bin"
set rsync_cmd="%rsync_path%\rsync.exe" --archive

set vst2_32=/cygdrive/c/Program Files (x86)/Steinberg/VSTPlugins/mzuther/
set vst3_32=/cygdrive/c/Program Files (x86)/Common Files/VST3/mzuther/
set vst2_64=/cygdrive/c/Program Files/Steinberg/VSTPlugins/mzuther/
set vst3_64=/cygdrive/c/Program Files/Common Files/VST3/mzuther/

set vst2_32_categories="/cygdrive/d/Plugins/32-bit/Categories/{{vst2_category}}"
set vst2_64_categories="/cygdrive/d/Plugins/64-bit/Categories/{{vst2_category}}"
{% endmacro -%}

{# -------------------------------------------------------------------------- #}

{%- macro render_postamble() %}
echo.
pause
exit /b %errorlevel%


:CopyVst
set source=%~1
set destination=%~2

echo CopyVst       %source%
%rsync_cmd% "%source%" "%destination%"

exit /b 0


:CopyVstDelete
set source=%~1
set destination=%~2

echo CopyVstDelete %source%
%rsync_cmd% --delete --exclude="*-linux" "%source%" "%destination%"

exit /b 0
{% endmacro -%}

{# -------------------------------------------------------------------------- #}

{%- macro render_vst2_windows(project, targets, platform, bits, outdir, header) %}
echo.
echo VST2 ({{header}})
echo.

{% for target in targets %}
call :CopyVst       "vst2/{{target.binary_windows}}{{platform}}.dll" "%{{outdir}}%"
{% endfor %}
call :CopyVst       "vst2/Documentation/{{ project.name }}.pdf" "%{{outdir}}%"
{% endmacro -%}

{# -------------------------------------------------------------------------- #}

{%- macro render_vst3_windows(project, targets, platform, bits) %}
echo.
echo VST3 ({{bits}} bit)
echo.

call :CopyVstDelete "vst3/{{ project.name }}.vst3" "%vst3_{{bits}}%"
{% endmacro -%}

{# ========================================================================== #}

{{- common.start_new_file('bin/copy_vst.bat') -}}

{{- render_preamble(settings.copyright, settings.vst2_category) }}

{% for platform, bits in [['', '32'], [' x64', '64']] -%}

{% for outdir, header in [['vst2_' + bits, bits + ' bit'],
                          ['vst2_' + bits + '_categories', bits + ' bit, Categories']] -%}
{{ render_vst2_windows(settings.project, settings.targets.vst2, platform, bits, outdir, header) }}
{% endfor %}

{{ render_vst3_windows(settings.project, settings.targets.vst3, platform, bits) }}

{% endfor -%}

{{- render_postamble() -}}

